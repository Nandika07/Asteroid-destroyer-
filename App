import javax.swing.*;

public class App {
    public static void main(String[] args)// throws Exception 
    {
        
        //
        int titleSize = 32;
        int rows = 16;
        int columns = 16;
        int boardWidth = titleSize * columns; // 32*16 = 512 px
        int boardHeight= titleSize * rows; // 32*16 = 512 px

        JFrame frame = new JFrame("Asteorid Destroyer");
        frame.setVisible(true);
        frame.setSize(boardWidth, boardHeight);
        frame.setLocationRelativeTo(null);
        frame.setResizable(false);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        AsteroidDestroyer asteroidDestroyer = new AsteroidDestroyer();
        frame.add(asteroidDestroyer);
        frame.pack();
        frame.setVisible(true);
        
    }
}
 
